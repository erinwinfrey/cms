{% extends "base_employees.html" %}

{% load generic_markup image_utils thumbnail cache %}

{% block title %}Staff{{ block.super }}{% endblock %}

{% block meta_description %}Staff at the Virginia Tech Carilion Research Institute.{% endblock %}

{% block feeds %}{% endblock %}

{% block view_type %}list{% endblock %}

{% block app_type %}employees{% endblock %}

{% block primary_content %}
<div id="content_list">
	<h1>Staff</h1>

	<ul>
	{% cache 500 staff_list %}
	{% for employee in object_list %}
		<li>
			<h2>
				<a href="{{ employee.get_absolute_url }}" title="{{ employee.first_name }} {{ employee.last_name }}">{% if employee.photo %}<img src="{{ employee.photo|crop:"150x150" }}" alt="{{ employee.first_name }} {{ employee.last_name }}">{% endif %}
				{{ employee.first_name }} {{ employee.last_name }}</a>
			</h2>
			<h3>{{ employee.title }}</h3>
			<p>{{ employee.job_description|truncatewords:"25" }}</p>
		</li>
	{% endfor %}
	{% endcache %}
	</ul>

</div>
{% endblock %}

{% block secondary_content %}
<h2>Employees</h2>
<p><a href="/employees/" title="Employees of the VTCRI">View a list of all employees</a></p>
{% endblock %}